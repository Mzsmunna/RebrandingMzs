  "JWTAuth": {
    "Issuer": "https://mzsmunna.com", //http://localhost:4200
    "Audience": "https://mzsmunna.com", //http://localhost:4200
    "SecretKey": ""
  },
  "SignInWith": {
    "Scheme": "External",
    "GitHub": false,
    "LinkedIn": false,
    "Microsoft": false,
    "Google": false,
    "Facebook": false,
    "Twitter": false,
    "WhatsApp": false
  },
  "GitHubAuth": { // create an app on github & find ClientId & ClientSecret in https://github.com/settings/applications/appid
    "ClientId": "",
    "ClientSecret": "",
    "CallbackPath": "/api/auth/RequestGitHubSignIn", // https://localhost:7016/api/auth/RequestGitHubSignIn
    "AuthorizationEndpoint": "https://github.com/login/oauth/authorize",
    "TokenEndpoint": "https://github.com/login/oauth/access_token",
    "UserInformationEndpoint": "https://api.github.com/user"
  },
  "FeatureManagement": { // Feature flags for API versions: https://www.youtube.com/watch?v=KWvSYrSdU44
    "UseUserApiV1": false,
    "UseUserApiV2": true,
    "UseUserApiV3": { // for targeted users/groups or gradual rollout of a new feature
      "EnabledFor": [
        {
          "Name": "Microsoft.Targeting",
          "Parameters": {
            "Audience": {
              "Users": [ "userId1", "userId2" ],
              "Groups": [
                {
                  "Name": "beta-testers",
                  "RolloutPercentage": 100
                },
                {
                  "Name": "internal-users",
                  "RolloutPercentage": 100
                }
              ],
              "DefaultRolloutPercentage": 0,
              "Exclusion": {
                "Users": [
                  "userId0"
                ]
              }
            }
          }
        }
      ]
    }
  }
}
